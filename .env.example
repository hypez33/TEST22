POSTGRES_USER=budlife
POSTGRES_PASSWORD=budlife
POSTGRES_DB=budlife
POSTGRES_PORT=5432
POSTGRES_HOST=db
# For local Next.js without Docker, set POSTGRES_HOST=localhost.

# Connection string used by Prisma and the Next.js app
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}"

# Auth/session
AUTH_SECRET=please-change-me
SESSION_COOKIE_NAME=budlife_session
# Set to false for local HTTP (e.g., docker-compose without TLS); true enforces Secure cookies
COOKIE_SECURE=false
